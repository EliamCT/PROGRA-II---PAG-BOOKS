@model MvcBooks.Models.Book

@{
    ViewData["Title"] = "Eliminar Libro";
}

<h1>¿Seguro que quieres eliminar este libro?</h1>

<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">Año</dt>
        <dd class="col-sm-10">@Model.Year</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-2">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancelar</a>
</form>
