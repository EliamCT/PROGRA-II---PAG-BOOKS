@model MvcBooks.Models.Book

@{
    ViewData["Title"] = "Detalle del Libro";
}

<h1>Detalle del Libro</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">Año</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <dt class="col-sm-2">Editorial</dt>
        <dd class="col-sm-10">@Model.Publisher</dd>

        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Model.ISBN</dd>
    </dl>

    <a class="btn btn-secondary" href="/Books">Regresar</a>
</div>
